// use css extension, not needed for .styl extension
@import "whitespace-reset.css"
@import "mixins"

body
  font: normal 16px "Lato", sans-serif
  color: colors.text
  background: colors.bodyBackground
  
main
  max-width: 1000px
  min-width: 600px
  padding: 25px 40px
  margin: 0 auto
  background: colors.main
  box-sizing: border-box

#index  
  h1
    padding: 0 0 25px 0
    font-size: 2em
    
  h2
    font-size: 1.5em
    
  h3
    font-size: 1.2em
    
  h2, h3, p
    padding: 0 0 5px 0
  
  ul
    padding: 0 0 40px 0
    margin: 0 0 0 -20px
    list-style: none
  
  li
    display: inline-block
    width: 20%
    padding: 0 0 25px 20px
    box-sizing: border-box
    vertical-align: top
    img
      display: block
      width: 100%
      margin: 0 0 10px 0
  
a.button, input[type="submit"]
  button()
  
form
  dt
    padding: 0 0 5px 0
  dd 
    padding: 0 0 20px 0
  input[type="text"],
  input[type="date"],
  input[type="url"]
    width: 100%
    height: 30px
    padding: 5px 8px
    border: 1px solid colors.inputBorder
    border-radius: 6px
    box-sixing: border-box
  
    

  