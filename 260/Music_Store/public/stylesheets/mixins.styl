addToCart = background: #888888
    padding: 10px 20px
    border-radius: 5px
    color: blue
    
colors = {
  bodyBackground: #6f7f8e,
  text: #333333,
  main: #ffffff,
  button: {
    text: #ffffff
    background: #00a388
  },
  highlight: #4d6f8e
  inputBorder: #888888
}

appearance()
  appearance: none
  -moz-appearance: none
  -webkit-appearance: none
  
button()
  position: relative
  display: inline-block
  padding: 10px 25px
  font-size: 18px
  text-decoration: none
  color: colors.button.text
  cursor: pointer
  border: none
  border-radius: 8px
  background: colors.button.background
  outline: none
  appearance()
  transition: box-shadow 200ms ease, top 200ms ease, left 200ms ease, color 200ms ease
  box-shadow: 2px 2px 0 2px darken(colors.button.background, 5)
  &:hover,
  &:focus
    color: colors.highlight
  &:active
    left: 2px
    top: 2px
    box-shadow: 1px 1px 0 1px darken(colors.button.background, 5)